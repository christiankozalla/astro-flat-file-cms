---
import '../../styles/admin.css';
const { id, headline, body, cta } = Astro.props;
---

<div role="dialog" id={id}>
  <h3>{headline}</h3>
  <p>{body}</p>
  <button onclick={`window.${id}.style.display = 'none'`}>{cta}</button>
</div>
<style>
  div[role='dialog'] {
    display: none;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 210;
    background-color: white;
    padding: 2rem;
    border-radius: 6px;
    box-shadow: 2px 2px 0px 8px rgba(0, 0, 0, 0.25);
  }
</style>
